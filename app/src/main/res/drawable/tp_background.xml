    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="@color/blue" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

     테두리 설정: 두께, 색상
    <stroke
        android:width="5.5dp"
        android:color="@color/navy" />

    <corners
