<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogText" parent="android:TextAppearance">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:fontFamily">@font/neo_dgm</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HelpDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Clear"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>