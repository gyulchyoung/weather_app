<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/blue"
    tools:openDrawer="start">

    <!--    드래그 후 새로고침 layout   -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/main_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    메인뷰 전체 layout  (기존 fragment_home.xml) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:layout_marginTop="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재온도"
                    android:layout_toLeftOf="@+id/pb_temp"
                    android:layout_marginRight="10dp"/>
                <ProgressBar
                    android:id="@+id/pb_temp"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:max="50"
                    android:progress="0"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_toLeftOf="@+id/pb_temp_text"/>
                <TextView
                    android:id="@+id/pb_temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@+id/pb_temp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강수확률"
                    android:layout_toLeftOf="@id/pb_rain"
                    android:layout_alignTop="@+id/pb_rain"
                    android:layout_marginRight="10dp"/>
                <ProgressBar
                    android:id="@+id/pb_rain"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:max="100"
                    android:progress="0"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progress"
                    android:layout_below="@id/pb_temp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@+id/pb_rain_text"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <TextView
                    android:id="@+id/pb_rain_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_alignBottom="@+id/pb_rain"
                    android:layout_alignTop="@+id/pb_rain"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"/>

                
            </RelativeLayout>

            <!--        상태창 layout      -->
            <!--        mainview 나머지        -->
            <Button
                android:id="@+id/F5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#00BCD4"
                android:text="새로고침" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/drawer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_dehaze_24"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"/>

                <ImageView
                    android:id="@+id/cat"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_magic_cat" />

                <ImageButton
                    android:id="@+id/specific_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_weather"
                    android:layout_marginLeft="40dp" />

                <ImageButton
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_alarm_clock" />

                <ImageButton
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:background="@android:color/transparent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_help"
                    android:layout_marginRight="45dp" />

                <ImageView
                    android:id="@+id/snowcat"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignBottom="@id/cat"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_snowcat" />

                <ImageView
                    android:id="@+id/umbrella"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignTop="@id/cat"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_umbrella" />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!--drawer view -->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/blue">
        <!--       고양이 알람 설정 view       -->
        <fragment
            android:id="@+id/fragment_a"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:name="com.example.main_w.alarm.AlarmFragment" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>